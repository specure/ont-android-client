<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <layer-list>
            <item android:width="@dimen/button_size" android:height="@dimen/button_size" android:gravity="center">

                <shape android:shape="oval">
                    <gradient android:angle="90" android:centerColor="#0d287c" android:endColor="#037c91" android:startColor="#000629" android:type="linear" />
                    <size android:height="@dimen/button_size" android:width="@dimen/button_size"/>
                </shape>

            </item>
            <item android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" android:gravity="center">

                <shape android:shape="oval">
                    <solid android:color="#00000000" />
                    <stroke android:width="8dp" android:color="@android:color/black" />
                    <size android:height="@dimen/inner_button_circle" android:width="@dimen/inner_button_circle"/>
                </shape>

            </item>

        </layer-list>


    </item>
    <item>
        <layer-list>
            <item android:width="@dimen/button_size" android:height="@dimen/button_size" android:gravity="center" >

                <shape android:shape="oval">
                    <gradient android:angle="90" android:centerColor="#1e398d" android:endColor="#148da2" android:startColor="#001739" android:type="linear" />
                    <size android:height="@dimen/button_size" android:width="@dimen/button_size"/>
                </shape>

            </item>
            <item android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" android:gravity="center">

                <shape android:shape="oval">
                    <solid android:color="#00000000" />
                    <stroke android:width="8dp" android:color="@android:color/black" />
                    <size android:height="@dimen/inner_button_circle" android:width="@dimen/inner_button_circle"/>
                </shape>

            </item>

        </layer-list>


    </item>


</selector>


