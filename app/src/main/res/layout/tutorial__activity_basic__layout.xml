<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_text_color_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header__gray_background"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/page_title_settings"
            android:textColor="@color/app_text_color" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <at.specure.android.views.SquareLayout
            android:layout_gravity="right"
            android:layout_width="56dp"
            android:layout_marginRight="8dp"
            android:layout_height="56dp">

            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_button_bckg"
                android:text="16+"
                android:textColor="@color/app_text_color_light" />

        </at.specure.android.views.SquareLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/app_text_color_light"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/wizard.one_page.title"
                android:textColor="@color/app_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="@string/wizard.one_page.privacy_description"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/wizard.one_page.analytics_title"
                android:textColor="@color/app_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/analytics_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="@string/wizard.one_page.analytics_description"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/wizard.one_page.persistent_client_title"
                android:textColor="@color/app_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/persistent_uuid_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="@string/wizard.one_page.persistent_client_description"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/finish_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="4dp"
                android:justificationMode="inter_word"
                android:gravity="left"
                android:textColor="@color/black"
                android:text="@string/wizard.one_page.finish_description"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/agree_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color_light"
                android:background="@color/app_text_color"
                android:textAllCaps="false"
                android:text="@string/wizard.button.i_agree_to_all" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Button
                android:id="@+id/skip_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textAllCaps="false"
                android:textColor="@color/app_text_color_light"
                android:layout_height="wrap_content"
                android:background="@color/button__gray_background"
                android:text="@string/wizard.button.essential_settings_only" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>