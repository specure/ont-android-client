<?xml version="1.0" encoding="utf-8"?>
<at.specure.android.views.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/badge_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/badge_placeholder" />

    <ImageView
        android:id="@+id/badge_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/badge_text_frame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/badge_orange_banner" />

    <TextView
        android:id="@+id/badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        tools:text="Rookie" />

</at.specure.android.views.SquareLayout>