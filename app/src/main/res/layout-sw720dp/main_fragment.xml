<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:id="@+id/main_fragment__top_info_container_measurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:visibility="gone">

                    <include
                        android:id="@+id/test_progress_signal_strength"
                        layout="@layout/test_progress_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/test_progress_ping"
                        layout="@layout/test_progress_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/test_progress_jitter"
                        layout="@layout/test_progress_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <include
                        android:id="@+id/test_progress_packet_loss"
                        layout="@layout/test_progress_info_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_fragment__top_info_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:visibility="visible"
                    android:weightSum="1">

                    <!--   TRAFFIC   -->
                    <LinearLayout
                        android:id="@+id/title_page_traffic_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--android:background="@drawable/layout_bg_selector"-->


                        <LinearLayout
                            android:id="@+id/traffic_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="7dp">

                            <TextView
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/title_screen_traffic_info" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/traffic_dl_1_image"
                                    android:layout_width="16dp"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:src="@drawable/arrow_grey" />

                                <ImageView
                                    android:id="@+id/traffic_dl_2_image"
                                    android:layout_width="16dp"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:src="@drawable/arrow_grey" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/traffic_ul_2_image"
                                    android:layout_width="16dp"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:rotation="180"
                                    android:src="@drawable/arrow_grey" />

                                <ImageView
                                    android:id="@+id/traffic_ul_1_image"
                                    android:layout_width="16dp"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="10dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:rotation="180"
                                    android:src="@drawable/arrow_grey" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <!--   CPU - RAM   -->


                    <LinearLayout
                        android:id="@+id/title_page_cpu_stats_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:minEms="3"
                                android:text="@string/title_screen_cpu" />

                            <TextView
                                android:id="@+id/cpu_status"
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:minEms="3"
                                tools:text="100%" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:minEms="3"
                                android:text="@string/title_screen_ram" />

                            <TextView
                                android:id="@+id/ram_status"
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:minEms="3"
                                tools:text="100%" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--   IPv4 - IPv6   -->

                    <LinearLayout
                        android:id="@+id/title_page_ip_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">
                        <!--            android:background="@drawable/layout_bg_selector"-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="@string/title_screen_ipv4"
                                android:textAllCaps="false" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ipv4_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/traffic_lights_grey"
                                    android:visibility="gone" />

                                <ProgressBar
                                    android:id="@+id/ipv4_status_progress_bar"
                                    style="@android:style/Widget.ProgressBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingLeft="8dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/QoSTheme.TextView.Medium.TitlePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="@string/title_screen_ipv6"
                                android:textAllCaps="false" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ipv6_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/traffic_lights_grey"
                                    android:visibility="gone" />

                                <ProgressBar
                                    android:id="@+id/ipv6_status_progress_bar"
                                    style="@android:style/Widget.ProgressBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:paddingLeft="8dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/QoSTheme.TextView.Medium.TitlePage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".4"
                            android:gravity="left"
                            android:text="@string/menu_signal_strength" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_fragment__signal_strength"
                                style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Enabled" />

                            <TextView
                                android:id="@+id/info_signal_strength_extra"
                                style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:visibility="gone"
                                tools:text="@string/title_screen_cpu" />

                        </LinearLayout>


                    </LinearLayout>


                    <!-- BTS ID -->
                    <LinearLayout
                        android:id="@+id/main_fragment__cell_id_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/QoSTheme.TextView.Medium.TitlePage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".4"
                            android:gravity="left"
                            android:text="@string/menu_cell_id" />


                        <TextView
                            android:id="@+id/main_fragment__cell_id"
                            style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Enabled" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/measurement_graphs_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="4dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/test_progress__download_graph"
                    layout="@layout/test_progress_small_graph" />

                <androidx.legacy.widget.Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/test_progress__upload_graph"
                    layout="@layout/test_progress_small_graph" />

            </LinearLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <FrameLayout
                android:id="@+id/gauge_lower_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline1"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline1">

                <at.specure.android.views.CustomGauge
                    android:id="@+id/gauge_lower"
                    android:layout_width="@dimen/gauge_size"
                    android:layout_height="@dimen/gauge_size"
                    android:rotation="180"
                    app:gaugeColors="@array/colors_of_bottom_curve"
                    app:gaugeDividerColor="@android:color/white"
                    app:gaugeDividerDrawFirst="false"
                    app:gaugeDividerDrawLast="false"
                    app:gaugeDividerPositionHidden="@array/hidden_for_upper_curve"
                    app:gaugeDividerSize="0"
                    app:gaugeDividerStep="7"
                    app:gaugeEndValue="143"
                    app:gaugePointEndColor="#011c3e"
                    app:gaugePointStartColor="#fdd043"
                    app:gaugeScaleColor="@color/gauge_scale"
                    app:gaugeScaleCount="44"
                    app:gaugeScaleSize="1px"
                    app:gaugeScaleWidth="3dp"
                    app:gaugeStartAngle="210"
                    app:gaugeStartValue="0"
                    app:gaugeStringsSize="20sp"
                    app:gaugeStrokeCap="BUTT"
                    app:gaugeStrokeCentralColor="@color/gauge_central_ring"
                    app:gaugeStrokeCentralWidth="15dp"
                    app:gaugeStrokeInnerColor="@color/gauge_basic"
                    app:gaugeStrokeInnerWidth="15dp"
                    app:gaugeStrokeOuterColor="@color/gauge_inner_ring"
                    app:gaugeStrokeOuterWidth="15dp"
                    app:gaugeSweepAngle="270"
                    app:gaugeValue="143"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="0dp" />
                <!--<at.specure.ont.Ring-->
                <!--android:layout_width="220dp"-->
                <!--android:layout_height="220dp"-->
                <!--android:rotation="180" />-->

                <ImageView
                    android:id="@+id/title_page_map_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/margin_pre_medium"
                    android:src="@drawable/map_button"
                    tools:layout_editor_absoluteX="-39dp"
                    tools:layout_editor_absoluteY="40dp" />

                <TextView
                    android:id="@+id/text_view_lower_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/app_main_button_text_color"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="0dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/main_fragment__upper_ring_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline2"
                app:layout_constraintLeft_toRightOf="@+id/vertical_guideline2"
                app:layout_constraintTop_toBottomOf="@id/measurement_graphs_container">

                <!--<at.specure.ont.Ring-->
                <!--android:layout_width="220dp"-->
                <!--android:layout_height="220dp" />-->

                <at.specure.android.views.CustomGauge
                    android:id="@+id/gauge_upper"
                    android:layout_width="@dimen/gauge_size"
                    android:layout_height="@dimen/gauge_size"
                    app:gaugeDividerColor="@android:color/white"
                    app:gaugeDividerDrawFirst="false"
                    app:gaugeDividerDrawLast="false"
                    app:gaugeDividerPositionHidden="@array/hidden_for_upper_curve"
                    app:gaugeDividerSize="0"
                    app:gaugeDividerStep="7"
                    app:gaugeEndValue="143"
                    app:gaugePointEndColor="@color/gauge_basic"
                    app:gaugePointStartColor="@color/gauge_basic"
                    app:gaugeScaleColor="@color/gauge_scale"
                    app:gaugeScaleCount="44"
                    app:gaugeScaleSize="1px"
                    app:gaugeScaleWidth="3dp"
                    app:gaugeShowScale="false"
                    app:gaugeStartAngle="210"
                    app:gaugeStartValue="0"
                    app:gaugeStringsSize="20sp"
                    app:gaugeStrokeCap="BUTT"
                    app:gaugeStrokeCentralColor="@color/gauge_central_ring"
                    app:gaugeStrokeCentralWidth="15dp"
                    app:gaugeStrokeInnerColor="@color/gauge_basic"
                    app:gaugeStrokeInnerWidth="15dp"
                    app:gaugeStrokeOuterColor="@color/gauge_inner_ring"
                    app:gaugeStrokeOuterWidth="15dp"
                    app:gaugeSweepAngle="270" />

                <FrameLayout
                    android:id="@+id/start_button_container"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/title_page_start_button"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:padding="@dimen/margin_pre_medium"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/start_test_button_bckg" />

                    <TextView
                        android:id="@+id/start_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/menu_button_start"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_big"
                        android:textStyle="bold" />

                </FrameLayout>


                <TextView
                    android:id="@+id/text_view_upper_test"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/app_main_button_text_color"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <!--<ImageView-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/app_logo_text" />-->

            </FrameLayout>


            <LinearLayout
                android:id="@+id/main_fragment__bottom_info_container"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_fragment__upper_ring_container">

                <LinearLayout
                    android:id="@+id/main_fragment__test_server_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_fragment__test_server_title"
                            style="@style/QoSTheme.TextView.Medium.TitlePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="end"
                            android:text="@string/test_test_server" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/main_fragment__test_server_name"
                            style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:clickable="false"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxEms="6"
                            android:maxLines="2"
                            android:text="-"
                            android:textSize="8sp"
                            tools:text="SPECURE-SERVER (Nurnberg)" />

                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/main_fragment__test_server_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/select" />

                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:id="@+id/main_fragment__network_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_fragment__network_title"
                            style="@style/QoSTheme.TextView.Medium.TitlePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/test_location_network" />

                        <TextView
                            android:id="@+id/main_fragment__network_name"
                            style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="right"
                            tools:text="@string/test_location_network" />

                        <TextView
                            android:id="@+id/main_fragment__network_type"
                            style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text=""
                            tools:text="Enabled" />


                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/antenne_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/signal_no_connection" />


                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="6dp" />

                <LinearLayout
                    android:id="@+id/title_page_location_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_fragment__location_title"
                            style="@style/QoSTheme.TextView.Medium.TitlePage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_screen_location_info" />

                        <TextView
                            android:id="@+id/main_fragment__location_enabled_text"
                            style="@style/QoSTheme.TextView.Medium.TitlePage.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:maxEms="10"
                            android:text="@string/disabled"
                            android:textAllCaps="true"
                            tools:text="@string/disabled" />

                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/location_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="fitCenter"
                        android:src="@drawable/location"
                        android:tint="@color/icon_main_tint" />

                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="6dp" />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/info_overlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minWidth="300dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_overlay_title"
                        style="@style/Specure.Overlay.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@android:string/untitled" />

                    <ListView
                        android:id="@+id/info_overlay_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/main__bottom_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@drawable/white_stronger_gradient"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <!--android:background="@color/app_background"-->

                <!--<include-->
                <!--layout="@layout/title_screen_status"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="2" />-->

                <Button
                    android:id="@+id/show_detailed_result_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_button_bckg"
                    android:maxHeight="96dp"
                    android:text="@string/show_detailed_results"
                    android:textAllCaps="true"
                    android:textColor="@color/app_text_color_light"
                    android:visibility="gone" />

                <include
                    android:id="@+id/graph_container"
                    layout="@layout/test_graph"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone" />

                <!-- took me several hours and attempts to figure that out:
                    To stretch the last element inside a scrollview set its height and width to fill_parent, and fillViewport to true.
                    Then, the last element, needs to have a weight of 1 !!!!
                 -->

                <include
                    android:id="@+id/test_view_qos_results_container"
                    layout="@layout/test_view_qos_results"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:background="@color/black"
                    android:maxHeight="96dp"
                    android:visibility="gone" />


                <!--
                <RelativeLayout
                    android:id="@+id/test_view_group_count_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:visibility="gone" />
                -->

                <include
                    android:id="@+id/test_view_info_container"
                    layout="@layout/test_view_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/main__bottom_info_default_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:gravity="bottom|center_horizontal"
                        android:text="@string/data_consumption_warning_short" />

                    <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="6dp"
                        android:animateLayoutChanges="true" />

                    <ImageView
                        android:id="@+id/increased_consumption_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:animateLayoutChanges="true"
                        android:src="@drawable/question_mark" />

                    <LinearLayout
                        android:id="@+id/button_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/increased_consumption_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="24dp"
                            android:animateLayoutChanges="true"
                            android:gravity="center"
                            android:text="@string/start_data_consumption_warning"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/test_view_qos_container"
                layout="@layout/test_view_qos_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:maxHeight="96dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
